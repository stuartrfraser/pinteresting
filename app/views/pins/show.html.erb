<div class="container">

	<div class="panel">

		<div class="panel=heading">
			<%= image_tag @pin.image.url %>
		</div>

		<div class="panel-body">
			<p>
			  <strong>Description:</strong>
			  <%= @pin.description %>
			</p>
		</div>

		<div class="footer">
			<% if @pin.user = current_user %>
			<%= link_to 'Edit', edit_pin_path(@pin) %> 
			<% end %>
			<%= link_to 'Back', pins_path %>
		</div>

	</div>

</div>